    "@types/react-router-dom": "5.3.3",
    "@types/redux-logger": "3.0.12",
    "@types/unzipper": "0.10.9",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "antd": "4.24.12",
    "babel-plugin-import": "1.13.8",
    "bitcoin-core": "4.1.0",
    "bufferutil": "4.0.8",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
