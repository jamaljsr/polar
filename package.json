    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "14.6.1",
    "@types/archiver": "6.0.3",
    "@types/detect-port": "1.3.5",
    "@types/dockerode": "3.3.40",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.5.14",
    "@types/js-yaml": "4.0.9",
